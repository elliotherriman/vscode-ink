{
    "name": "ink",
    "displayName": "ink",
    "version": "0.0.1",
    "description": "Syntax highlighting for inkle's ink",
    "categories": [
        "Programming Languages"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/ephread/ink-vscode.git"
    },
    "license": "MIT",
    "author": {
        "name": "Frédéric Maquin",
        "email": "fred@ephread.com"
    },
    "publisher": "ephread",
    "contributes": {
        "grammars": [
            {
                "language": "ink",
                "scopeName": "source.ink",
                "path": "./node_modules/ink-tmlanguage/grammars/Ink.tmLanguage"
            }
        ],
        "languages": [
            {
                "id": "ink",
                "aliases": [
                    "ink",
                    "Ink"
                ],
                "extensions": [
                    ".ink"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "configuration": {
            "title": "Ink",
            "properties": {
                "ink.mainStoryPath": {
                    "scope": "resource",
                    "type": "string",
                    "default": "",
                    "description": "Path to the main ink file, relative to the root of your workspace."
                },
                "ink.inklecatePath": {
                    "scope": "resource",
                    "type": "string",
                    "default": "inklecate",
                    "description": "Path to the inklecate executable."
                },
                "ink.useSpecificRuntime": {
                    "scope": "resource",
                    "type": "string",
                    "default": "none",
                    "description": "You can run inklecate with a specific runtime. Make sure they are available on your system before selecting them.",
                    "enum": ["none", "mono", "dotnet"],
                    "enumDescriptions": [
                        "Don't use a specific runtime (Windows only)",
                        "Mono (mono)",
                        ".NET Core (dotnet)"
                    ]
                }
            }
        }
    },
    "main": "./out/extension",
    "activationEvents": [
        "onLanguage:ink"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.45.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.30.0",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "ink-tmlanguage": "^0.2.3",
        "vscode-languageclient": "^6.1.3"
    },
    "engines": {
        "vscode": "^1.45.0"
    }
}
