{
    "name": "ink",
    "displayName": "ink",
    "version": "0.0.1",
    "description": "Syntax highlighting for inkle's ink",
    "categories": [
        "Programming Languages"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/ephread/ink-vscode.git"
    },
    "license": "MIT",
    "author": {
        "name": "Frédéric Maquin",
        "email": "fred@ephread.com"
    },
    "publisher": "ephread",
    "main": "./out/extension",
    "scripts": {
        "compile": "npm run compile:webview && tsc -p ./",
        "compile:webviews": "npm run-script compile:webviews:statistics",
        "compile:webviews:statistics": "inline-source --root 'src/webviews/statistics' 'src/webviews/statistics/statistics.html' 'webviews/statistics.html'",
        "lint": "eslint src --ext ts",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js",
        "vscode:prepublish": "npm run compile",
        "watch": "tsc -watch -p ./",
        "watch:webviews": "npm run-script compile:webviews && chokidar 'webviews/**/*' -c 'npm run-script compile:webviews'"
    },
    "contributes": {
        "configuration": {
            "title": "Ink",
            "properties": {
                "ink.useLanguageServer": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": false,
                    "description": "Use the experimental language server (this feature requires a version of inklecate with LSP support)."
                },
                "ink.languageServer.mainFilePath": {
                    "scope": "resource",
                    "type": "string",
                    "default": "",
                    "description": "Path to the main ink file, relative to the root of your workspace."
                },
                "ink.languageServer.inklecatePath": {
                    "scope": "resource",
                    "type": "string",
                    "default": "inklecate",
                    "description": "Path to the inklecate executable."
                },
                "ink.languageServer.useSpecificRuntime": {
                    "scope": "resource",
                    "type": "string",
                    "default": "none",
                    "description": "You can run inklecate with a specific runtime. Make sure they are available on your system before selecting them.",
                    "enum": [
                        "none",
                        "mono",
                        "dotnet"
                    ],
                    "enumDescriptions": [
                        "Don't use a specific runtime (Windows only)",
                        "Mono (mono)",
                        ".NET Core (dotnet)"
                    ]
                }
            }
        },
        "grammars": [
            {
                "language": "ink",
                "scopeName": "source.ink",
                "path": "./node_modules/ink-tmlanguage/grammars/Ink.tmLanguage"
            }
        ],
        "languages": [
            {
                "id": "ink",
                "aliases": [
                    "ink",
                    "Ink"
                ],
                "extensions": [
                    ".ink"
                ],
                "configuration": "./language-configuration.json"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:ink"
    ],
    "dependencies": {
        "ink-tmlanguage": "^0.2.3",
        "vscode-languageclient": "^6.1.3"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "@types/vscode": "^1.45.0",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "@typescript-eslint/parser": "^2.30.0",
        "chokidar": "^3.4.0",
        "chokidar-cli": "^2.1.0",
        "eslint": "^6.8.0",
        "inline-source": "^7.2.0",
        "inline-source-cli": "^2.0.0",
        "typescript": "^3.8.3"
    },
    "engines": {
        "vscode": "^1.45.0",
        "webpack": "^4.43.0"
    }
}
